{
  "name": "mailpick-webapp",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "mock:server1": "json-server --watch inboxData.json --port 3001",
    "mock:server2": "json-server --watch accountData.json --port 3002",
    "mock:all": "npm run mock:server1 & npm run mock:server2",
    "json-server": "json-server --watch emailData.json --port 3001"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.24.8",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.2",
    "styled-components": "^6.1.8",
    "vite-tsconfig-paths": "^4.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@tanstack/eslint-plugin-query": "^5.20.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "electron": "^26.1.0",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.8.0",
    "json-server": "^1.0.0-alpha.23",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "twin.macro": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "main": "dist-electron/main.js"
